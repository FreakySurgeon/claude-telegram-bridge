[Unit]
Description=Claude Telegram Bridge
After=network.target

[Service]
Type=simple
User=your_user
WorkingDirectory=/path/to/claude-telegram-bridge
ExecStart=/path/to/claude-telegram-bridge/.venv/bin/uvicorn claude_telegram.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10
Environment=PATH=/usr/local/bin:/usr/bin:/bin

[Install]
WantedBy=multi-user.target
